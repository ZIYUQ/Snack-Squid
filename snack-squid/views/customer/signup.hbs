
<section id="sinup">
    <title>Login</title>

    <link rel="stylesheet" href="/customer/css/homepage.css">

    <form action="/customer/signup" method="post">
        <div class="container">
            <section class='BG'></section>

            <section class='Info'>
                <div class="icon2"></div>
                <div class= "line"></div>

            <label for="givenName"><b>Given Name</b></label>
