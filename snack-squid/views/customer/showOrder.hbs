<section id="showOrder">
    <link rel="stylesheet" href="/customer/css/menu.css">

<div class = "container">
    <a class="profile" href="/customer/profile"><i class="fas fa-user-circle"></i></a>
    <h1 id="title">ORDER</h1>

        <div class="state">
            <span>preparing orders</span>
            <span>fulfilled orders</span>
        </div>   

    
    {{#each preparingOrders}}
    <div class="allOrder"></div>
    <li>
        <table class="orderTable">
            <tr>
                <td>Order ID:</td>
                <td>{{this._id}}</td>
            </tr>
            <tr>
                <td>Details</td>
                <td class="detail">{{this.details}}</td>
                
            </tr>
            <tr>
                <td>total amount:</td>
                <td>{{this.total}}</td>
            </tr>
            <tr>
                <td>Van Name:</td>
                <td>{{this.vanId.vanName}}</td>
            </tr>
            <tr>
                <td>Order Time:</td>
                <td class="orderTime">{{this.updateTime}}</td>
            </tr>
            <tr>
                <td>You can change the order in:</td>
                <td class="timeStamp">{{this.timestamp.alterOrderLimit}}mins</td>
            </tr>
            <tr>
                <td>Order will be completed in:</td>
                <td class="dicountTime">{{this.timestamp.discountAwardLimit}}mins</td>
            </tr>
            <tr>
                <td>get 20% off after:</td>
                <td class="timeRemaining"></td>
            </tr>
        </table>
    </li>
    </div>
    {{/each}}
    

    <div class='completed order'>
        fulfilled orders:
        {{#each completedOrders}}
        <li>
            <table class="completedTable">
                <tr>
                    <td>Order ID:</td><td>{{this._id}}</td>
                </tr>
				<tr>
                    <td>Details</td>
                    <td class="detail">{{this.details}}</td>
                </tr>
                <tr>
                    <td>total amount:</td>
                    <td>{{this.total}}</td>
                </tr>
                <tr>
                    <td>Van Name:</td>
                    <td>{{this.vanId.vanName}}</td>
                </tr>
                <tr>
                    <td>Order Time:</td>
                    <td class="orderTime">{{this.orderTime}}</td>
                </tr>
                
                <tr>
                    <td>get 20% off:</td>
                    <td>{{this.discount}}</td>
                </tr>
            </table>
        </li>
        {{/each}}
    </div>
    
    <script src="/customer/js/order.js"></script>
    
</section>
