<section id="menu">
    <title>Menu</title>
    <link rel="stylesheet" href="/customer/css/menu.css">

    <div class="overlay" id="overlay">
        <button onclick="off()"><i class="fas fa-arrow-alt-circle-left"></i></button>
        <div class="products-container">
            <div class="products">
            </div>
        </div>
    </div>

    <a href="/customer"><div class="icon"></div></a>

    <div class = "container">
        <h3 class="cart"><ion-icon name="basket"></ion-icon>Cart: <span id="basket_span">0</span></h3>
        
        <h1 id="title">MENU</h1>

        {{!-- 大括号 --}}
        <div class="snacks">

            {{!-- snack圆形小图标 --}}
            <div id="subtitle1">
                <div id="snackicon-img"></div>
                <h2>Snacks</h2>
            </div>
            
            {{!-- snack item --}}
            {{#each snacks}}
                <div class="foodListing">
                    <a href="/customer/menu/{{this.tag}}">
                    <img src="../images/{{this.photo}}" alt="{{this.foodName}}"></a>

                        <div id="food-detail">
                        <span class="foodname">{{this.foodName}}</span>
                        <span class="food_price">${{this.price}}</span>
                        <button type="button" class="addCart">+</button>
                        <span class="quantity"></span>
                        <button type="button" class="removeCart">-</button>
                        </div>

                </div>
            {{/each}}

        </div>

        <div class="drinks">

            <div id="subtitle2">
                <div id="drinkicon-img"></div>
                <h2>Drinks</h2>
            </div>

            {{#each drinks}}
                <div class="foodListing">
                    <a href="/customer/menu/{{this.tag}}">
                    <img src="../images/{{this.photo}}" alt="{{this.foodName}}"></a>

                    <div id="food-detail">
                    <span class="foodname">{{this.foodName}}</span>
                    <span class="food_price">${{this.price}}</span>
                    <button type="button" class="addCart">+</button>
                    <span class="quantity">0</span>
                    <button type="button" class="removeCart">-</button>
                    </div>

                </div>
            {{/each}}

        </div>

        <div class="Ordering">
            <button id="ordering-text" onclick="on()">View Cart</button>
            <button id="cartbutton" onclick="on()"><img id="Cart-img" src="/customer/images/Shopping cartS.png"></button>
        </div>

    </div>

    <script src="/customer/js/cart.js"></script>

</section>